{{#section 'head'}}
<link rel='stylesheet' href='/stylesheets/profile.css' />
<link rel='stylesheet' href='/stylesheets/results.css' />
{{/section}}

<div class="container-fluid" id="main">
  <div class="well">
    <center>
      <div class ="row">
        <h3 class="username">Bruce Wayne</h3>
      </div>
      <img class="img-responsive img-circle" id="profile-icon" src="/images/batman_profile_icon.jpg">
    </center>
    <div class="row">
      <div class="col-xs-12 search-field">
        <h4>Email</h4>
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
          <input type="text" class="form-control" value="iamnotbatman@batcave.com">
        </div>
      </div>
    </div>

    {{#each fields}}
    {{> selector_partial}}
    {{/each}}

    <div class="row">
      <div class="col-xs-12">
        <h4>Favorites</h4>
      </div>
    </div>

    <div id="results">
      <ul class="list-group">
        {{#each meals}}
        <li class="list-group-item">
          <div class="result-field">
            <h4 class="meal-name">{{name}}</h4>
            <h5 class="restaurant">@ {{restaurant}}</h5>
            <div class="row label-row">
              <center>
                <button type="button" class="btn btn-xs btn-success tooltip-hover" data-toggle="tooltip" data-placement="top" title="Meal costs ${{cost}}">
                  $ {{cost}}
                </button>
                <button type="button" class="btn btn-xs btn-danger tooltip-hover" data-toggle="tooltip" data-placement="top" title="{{waitTime}} minute wait time">
                  <span class="glyphicon glyphicon-time"></span>
                  {{waitTime}} min.
                </button>
                <button type="button" class="btn btn-xs btn-info tooltip-hover label-last" data-toggle="tooltip" data-placement="top" title="0.3 miles away">
                  <span class="glyphicon glyphicon-map-marker"></span>
                  0.3 miles
                </button>
              </center>
            </div>
            <div class="btn-group btn-group-justified more-info">
              <a class="btn btn-default" href="/search/results/detail?id={{_id}}">Details</a>
              <a class="btn btn-default" href="/search/results/detail/map?id={{_id}}">Map</a>
            </div>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <button class="btn btn-warning col-xs-12" id="btn-changepw" type="submit">Change Password</button>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 save">
        <button class="btn btn-primary col-xs-12" type="submit">Save Changes</button>
      </div>
    </div>
  </div>
</div>

{{#section 'bodyscripts'}}
<script src="../javascripts/options_update.js"></script>
<script src="../javascripts/results.js"></script>
{{/section}}
