{{#section 'head'}}
<link rel='stylesheet' href='/stylesheets/results.css' />
<link rel='stylesheet' href='/stylesheets/profile.css' />
{{/section}}

<div class="container-fluid" id="main">
  {{#if message}}
    <div class="alert alert-success" role="alert">{{message}}</div>
  {{/if}}
  <div class="well">
    <center>
      <img class="img-responsive img-circle" id="profile-icon" src="http://www.gravatar.com/avatar/{{hashedEmail}}?s=250&d=https://grubbery.herokuapp.com/images/batman_profile_icon.jpg" />
      <a target="_blank" href="https://gravatar.com">Change picture @ gravatar.com</a>
    </center>
    <div class="row">
      <div class="col-xs-12 search-field">
        <h4>Email</h4>
        <div class="input-group email-field">
          <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
          <input type="text" class="form-control" value="{{user.username}}">
        </div>
      </div>
    </div>

    {{#each fields}}
      {{#include parent=..}}
        {{> selector_partial}}
      {{/include}}
    {{/each}}

    <div class="row">
      <div class="col-xs-12">
        <h4>Favorites <span id="coming-soon">Coming Soon!</span></h4>
      </div>
    </div>

    <div id="results" class="placeholder-disabled">
      <ul class="list-group">
        {{#each meals}}
        {{> list_results_partial}}
        {{/each}}
      </ul>
    </div>

<!-- Button trigger modal -->

    <div class="row">
      <div class="col-xs-12">
        <button class="btn btn-warning col-xs-12" id="btn-changepw"data-toggle="modal" data-target="#myModal">Change Password</button>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Change Password</h4>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col-xs-12 search-field">
                <h4>Old Password</h4>
                <input type="text" class="form-control">
              </div>
            </div>

            <div class="row">
              <div class="col-xs-12 search-field">
                <h4>New Password</h4>
                  <input type="text" class="form-control">
              </div>
            </div>

            <div class="row">
              <div class="col-xs-12 search-field">
                <h4>Confirm Password</h4>
                  <input type="text" class="form-control">
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <div id='#close'>
              <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              <button type="button" class="btn btn-primary" onclick="location.href='/coming_soon';">Save Password</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--End of Modal-->
        
    <div class="row">
      <div class="col-xs-12 save">
        <button class="btn btn-primary col-xs-12" type="submit" onclick="location.href='/coming_soon';">Save Changes</button>
      </div>
    </div>
  </div>
</div>

{{#section 'bodyscripts'}}
<script src="../javascripts/options_update.js"></script>
<script src="../javascripts/results.js"></script>
{{/section}}
