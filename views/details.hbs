{{#section 'head'}}
<link rel='stylesheet' href='/stylesheets/details.css' />
{{/section}}

<div class="container-fluid" id="main">
	<div class="row">
		<div class="col-xs-12">
			<button class="btn btn-primary col-xs-12" id="back-button" onclick="goBack()">
				Return to Results
			</button>
		</div>
	</div>
	<div class="well">
		<div class="row detail-row">
			<div class="col-xs-12">
				<h1 class="meal-name">{{meal.name}}</h1>
				
				<div class="row restaurant-cost">
		            <div class="col-xs-8">
		              <h5 class="media heading restaurant">@ {{meal.restaurant}}</h5>
		            </div>
		            <div class="col-xs-4">
		              <h5 class="cost pull-right">0.3 mi</h5>
		            </div>
	          	</div>
	          	<div class="row restaurant-cost">
		            <div class="col-xs-8">
		              <h5 class="media heading restaurant"><span class="glyphicon glyphicon-time"></span>{{meal.waitTime}} minutes</h4>
		            </div>
		            <div class="col-xs-4">
		              <h5 class="cost pull-right">$ {{meal.cost}}</h5>
		            </div>
	          	</div>

				<div class="media">
					<div class="media-center">
						<h4><span class="glyphicon glyphicon-info-sign"></span>Description</h4>
					</div>
					<div class="media-body">
						<p class="meal-description">{{meal.description}}</p>
					</div>
				</div>
				<div class="media">
					<div class="media-center">
						<h4><span class="glyphicon glyphicon-apple"></span>Ingredients</h4>
					</div>
					<div class="media-body">
						<p class="meal-description">{{meal.nutrition.ingredients}}</p>
					</div>
				</div>
				<div class="media">
					<div class="media-center">
						<h4><span class="glyphicon glyphicon-scale"></span>Nutrition Facts</h4>
					</div>
					<div class="media-body">
						<table class="table table-hover nutrition-info">
							{{#each meal.nutrition.information}}
							<tr>
								<td class="td-left">{{@key}}</td>
								<td class="td-right">{{this}}</td>
							</tr>
							{{/each}}
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
