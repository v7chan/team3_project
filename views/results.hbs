{{#section 'head'}}
<link rel='stylesheet' href='/stylesheets/results.css' />
{{/section}}

<div class="container-fluid" id="main">
  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
      Sort By <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><a href="#">Time</a></li>
      <li><a href="#">Distance</a></li>
      <li><a href="#">Cost</a></li>
    </ul>
  </div>

  <div id="results">
    <ul class="list-group">
      {{#each meals}}
      <li class="list-group-item">
        <div class="result-field">
          <h4>{{name}}</h4>
          <p>@ {{restaurant}}</p>
          <div class="label-row">
            <span class="label label-success result-label label-icon">${{cost}}</span>
            <span class="label label-danger result-label label-icon">{{waitTime}} min.</span>
            <span class="label label-warning result-label label-text">0.3 miles</span>
          </div>
          <div class="btn-group btn-group-justified">
            <a class="btn btn-default" href="/search/results/detail?id={{_id}}">Details</a>
            <a class="btn btn-default" href="/search/results/detail/map">Map</a>
          </div>
        </div>
      </li>
      {{/each}}

    </ul>
  </div>

  <div class="row">
    <div class="col-xs-12 back">
      <button class="btn btn-primary col-xs-12" type="submit" onclick="location.href='/search_page';">Back</button>
    </div>
  </div>
</div>